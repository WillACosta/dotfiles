{
  "window.commandCenter": true,
  "window.zoomLevel": 1.2,

  "debug.toolBarLocation": "commandCenter",

  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "Dainty â€“ Nord (chroma 0, lightness 0)",
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,

  // "editor.lineNumbers": "on",
  "editor.fontFamily": "JetBrains Mono", // JetBrainsMono IBM Plex Mono
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.fontLigatures": true,
  "editor.cursorStyle": "block",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 100,
  "editor.rulers": [100, 120],
  "editor.linkedEditing": true,
  "editor.autoClosingBrackets": "always",
  "editor.detectIndentation": false,
  "editor.autoClosingQuotes": "always",
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },

  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.openEditors.sortOrder": "editorOrder",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, bun.lockb, nest*, package-lock.json, yarn.lock",
    "tailwind.config.js": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    ".prettierrc": ".prettierignore",
    "jest.config.*": "jest.setup.*",
    "*.dart": "${capture}.g.dart, ${capture}.chopper.dart, ${capture}.freezed.dart"
  },

  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.config.dart": true,
    "**/.DS_Store": true,
    "**/.g.dart": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true
  },
  "files.associations": {
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    ".prettierrc": "json",
    "*.tsx": "typescriptreact",
    ".env.*": "dotenv",
    ".env*": "dotenv",
    "*.css": "tailwindcss"
  },

  "extensions.ignoreRecommendations": true,

  "cSpell.language": "en, pt_BR",
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    ".fvm",
    "/fvm"
  ],

  "git.decorations.enabled": true,
  "git.autofetch": true,
  "git.blame.statusBarItem.enabled": true,
  "git.blame.editorDecoration.enabled": true,

  "github.copilot.nextEditSuggestions.enabled": true,
  "editor.inlineSuggest.edits.renderSideBySide": "auto",

  "html.autoClosingTags": true,

  "dart.flutterSdkPath": "~/fvm/versions/default",

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "never",
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.formatOnType": true,
    "editor.wordBasedSuggestions": "off",
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[shellscript]": {
    "files.eol": "\n",
    "editor.defaultColorDecorators": "never",
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dart]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80, 100],
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },

  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.printWidth": 100,
  "prettier.useTabs": false,
  "prettier.trailingComma": "all",
  "prettier.arrowParens": "avoid",
  "prettier.tabWidth": 2,
  "prettier.bracketSpacing": true,

  "projectManager.git.baseFolders": ["~/workspace"],

  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/.vimrc",
  "vim.smartRelativeLine": true,
  "vim.handleKeys": {
    "C-p": false,
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false,
    "<C-f>": false
  },

  "workbench.activityBar.location": "bottom",
  "indenticator.showHover": true,
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDragAndDrop": false,
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "editor.lineNumbers": "relative"
}
